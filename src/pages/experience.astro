---
import ExperienceCard from "../components/ExperienceCard.astro";
import MainLayout from "../layouts/MainLayout.astro";

const experiences = [
  {
    company: "Peppy Health",
    title: "SVP of Engineering",
    period: "Aug 2023 – Present",
    highlights: [
      "Grew R&D team from 8 to 18 members with ~40% non-male / ~40% non-white representation",
      "Architected benefits platform using Next.js, React, TypeScript, and Python FastAPI",
    ],
  },
  {
    company: "This One",
    title: "Tech Lead & Lead Research Scientist",
    period: "May 2022 – June 2023",
    highlights: [
      "Developed cutting-edge movie recommendation system outperforming published benchmarks",
      "Managed 4-person engineering team, driving team performance and agile practices",
    ],
  },
  {
    company: "Spotify",
    title: "Staff Research Scientist & ML Engineering Manager",
    period: "March 2016 – January 2021",
    highlights: [
      "Scaled ML teams and drove advanced machine listening research",
      "Co-founded Tech Research organization and accelerated ML infrastructure development",
    ],
  },
