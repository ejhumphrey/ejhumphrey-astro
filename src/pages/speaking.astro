---
import MainLayout from "../layouts/MainLayout.astro";
import AudioPlayer from "../components/AudioPlayer.astro";
import VideoPlayer from "../components/VideoPlayer.astro";
---

<MainLayout title="Speaking">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-4xl font-bold mb-6">Speaking & Storytelling</h1>
    <p class="text-xl text-gray-600 mb-8">
      Audio and video highlighting my communication style and how I tell a story.
    </p>

    <section class="space-y-8">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-semibold mb-4">Audio Stories</h2>
        <div class="space-y-6">
          <AudioPlayer
            src="https://www.dropbox.com/scl/fi/a50aqw2o0qydwc5ay2xtg/zingermans_story.m4a?rlkey=93onlpps6wcfbs4cz4s2cmn7a&st=r9lof3c2&dl=1"
            title="Zingerman's Story"
          />
          <AudioPlayer
            src="https://www.dropbox.com/scl/fi/nizx9o53p3wn04tu78399/what_do_you_think.m4a?rlkey=2c6sazijl5c8mck35h9dw4e92&st=iq28114g&dl=1"
            title="What do you think?"
          />
          <AudioPlayer
            src="https://www.dropbox.com/scl/fi/sqo3sx17an8g95wdg4v6z/paired_programming.m4a?rlkey=19913dksigpe5htrdk59exrm5&st=igz4s19f&dl=1"
            title="Paired Programming"
          />
          <AudioPlayer
            src="https://www.dropbox.com/scl/fi/gso0tlogu498aqzl1qnax/camping_empathy_learning.m4a?rlkey=gf19c0jzte4fo0e1w901uty3p&st=q036h8eo&dl=1"
            title="Roughing-it, User Empathy, Always Be Learning"
          />
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-semibold mb-4">Video Presentations</h2>
        <div class="space-y-8">
          <VideoPlayer
            src="https://youtu.be/feYLhSKzGng"
            title="Eric's 'Christmissive'"
            type="youtube"
          />
          <VideoPlayer
            src="https://www.youtube.com/watch?v=htUNwSQTnf4"
            title="Separating Vocals in Recorded Music at Spotify – TWiML"
            type="youtube"
          />
          <VideoPlayer
            src="https://drive.google.com/file/d/1gqCslF9zeWS3aRxLrPHE0RVN6Mqxfhv1/view"
            title="Peppy Intro for SWEs - August 2024"
            type="drive"
          />
          <VideoPlayer
            src="https://drive.google.com/file/d/10KdkW8r4y8Ihyrw5GQK-XX3a-ymrVlm7/view"
            title="Peppy Intro for EMs - April 2024"
            type="drive"
          />
        </div>
      </div>
    </section>
  </div>
</MainLayout>
